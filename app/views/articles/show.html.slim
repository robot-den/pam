.col-lg-9
  h3
    strong
      = @article.header
  = @article.body
  row
    
    p
    .col-lg-12 style=("padding: 0px;")
      - @comments.each do |comment|
        .panel.panel-default style=("margin-left: 10px; width: 500px;")
          .panel-heading
            strong
              =' comment.owner_name
            i
              = "(#{comment.created_at.strftime("%H:%M %d.%m.%y")})"
          .panel-body
            =' comment.body
            - if current_user.try(:admin?)
              br
              =' link_to "Удалить текст комментария", comment_path(comment), method: :put
              br
              = link_to "Удалить полностью (вместе с веткой)", comment_path(comment), method: :delete
      .panel.panel-default
        .panel-heading
          | Leave a comment!
        .panel-body
           = form_for @comment do |comment|
            - unless user_signed_in?
              = comment.label :owner_name, "Your name"
              br
              = comment.text_field :owner_name, class: "form-control"
              p
            = comment.label :body, "Your comment"
            br
            = comment.text_area :body, class: "form-control"
            p
            = comment.submit "Отправить", class: "btn btn-primary"
            = comment.hidden_field :article_id, value: "#{@article.id}"
            = comment.hidden_field :commentable_id, value: "#{@article.id}"
            = comment.hidden_field :commentable_type, value: "Article"

.col-lg-3
  .col-lg-12
    .panel.panel-default
      .panel-heading
        | Веселый блок
      .panel-body
